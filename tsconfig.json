{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "./out",
    "rootDir": "./src"
  },
  "include": [
    "./src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "out",
    "tests"
  ]
}